<div class="app-main__inner">

    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2> <b>Group Name: <%= groupName%>  </b> </h2>
                </div>
                <div class="form-group col-sm-3">
                    <select id="inputState" class="form-control">
                        <!-- <option selected></option> -->
                        <% for (var i = 0; i < userResults.length;i++) { %>
                        <option><%= userResults[i].username %></option>
                        <% } %>
                    </select>
                </div>
                <div class="col-sm-3">
                    <button class="btn btn-success" onclick="myFunction()">Add User</button>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Sl.No</th>
                    <th>Username</th>
                    <th>Joined Date</th>
                    <th>Remove user</th>
                </tr>
            </thead>
            <tbody>
                <% for (var i = 0; i < result.length;i++) { %>
                <tr>
                    <th scope="row"><%= i+1 %></th>
                    <td><%= result[i].username%></td>
                    <td><%= result[i].joinedDate%></td>
                    <td>
                        <form action="../removeUser/<%= groupId %>/<%= result[i].userId%>"
                            method="get">
                            <button type="submit" id="PopoverCustomT-1"
                                class="btn btn-primary btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
                <% } %>
            </tbody>

        </table>

    </div>
</div>